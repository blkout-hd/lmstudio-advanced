{
  "name": "lmstudio-advanced-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Unified LM Studio advanced extensions monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
